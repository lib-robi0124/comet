<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aukcija NCO</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vozila.styles.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        a {
            color: #0077cc;
        }

        .btn-primary {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        .footer {
            /* position fixed absolute to bottom if page content short; ensure layout supports this */
            position: absolute;
            bottom: 0;
            width: 100%;
            white-space: nowrap;
            line-height: 60px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand text-primary fw-bold"
                   asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gavel me-2"></i>Auction NCO
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- LEFT MENU -->
                        <ul class="navbar-nav me-auto">

                            @* ================= BUYER ================= *@
                            @if (User.IsInRole("Buyer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Buyer"
                                       asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Auction"
                                       asp-action="Index">
                                        <i class="fas fa-gavel me-1"></i>Auctions
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Buyer"
                                       asp-action="MyBids">
                                        <i class="fas fa-coins me-1"></i>My Bids
                                    </a>
                                </li>
                            }

                            @* ================= LIBERTY ================= *@
                            else if (User.IsInRole("Liberty"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Liberty"
                                       asp-action="Dashboard">
                                        <i class="fas fa-chart-line me-1"></i>Dashboard
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Product"
                                       asp-action="Index">
                                        <i class="fas fa-boxes me-1"></i>My Products
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Auction"
                                       asp-action="Manage">
                                        <i class="fas fa-cogs me-1"></i>Manage Auctions
                                    </a>
                                </li>
                            }

                            @* ================= ADMIN ================= *@
                            else if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-controller="Admin"
                                       asp-action="Index">
                                        <i class="fas fa-user-shield me-1"></i>Admin Panel
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- RIGHT USER MENU -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @Context.Session.GetString("UserName") ?? "User"
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item-text text-muted small">
                                            <i class="fas fa-id-badge me-1"></i>
                                            @Context.Session.GetString("Role") ?? "Role"
                                        </span>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Profile">
                                            <i class="fas fa-user me-1"></i>Profile
                                        </a>
                                    </li>

                                    <li>
                                        <form method="post"
                                              asp-controller="Home"
                                              asp-action="Logout">
                                            <button type="submit"
                                                    class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-1"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- NOT LOGGED IN -->
                        <ul class="navbar-nav ms-auto">

                            <li class="nav-item">
                                <a class="nav-link fw-semibold"
                                   asp-controller="Home"
                                   asp-action="Login"
                                   asp-route-userType="buyer">
                                    <i class="fas fa-user me-1"></i>Buyer Login
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-semibold"
                                   asp-controller="Home"
                                   asp-action="Login"
                                   asp-route-userType="liberty">
                                    <i class="fas fa-building me-1"></i>Liberty Login
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container mt-4 mb-5" style="min-height: calc(100vh - 200px);">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3">
            &copy; 2025 - Transport System - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
