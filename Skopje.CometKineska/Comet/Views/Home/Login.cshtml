@model Comet.ViewModels.ModelsUser.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    var userType = (string?)ViewData["UserType"] ?? "buyer";
    var returnUrl = (string?)ViewData["ReturnUrl"];
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3 text-center">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    @if (userType == "buyer")
                    {
                        <text>Buyer Login</text>
                    }
                    else
                    {
                        <text>Admin / Company Login</text>
                    }
                </h4>

                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="you@company.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-unlock me-1"></i> Login
                        </button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-action="Index" asp-controller="Home">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}